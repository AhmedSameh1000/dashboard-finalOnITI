@page
@model PersonalDataModel
@{
    ViewData["Title"] = @localizer["Personal Data"];
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="d-flex align-content-center">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>@localizer["Your account contains personal data that you have given us. This page allows you to download or delete that data."]</p>
        <p>
            <strong>@localizer["Deleting this data will permanently remove your account, and this cannot be recovered."]</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">@localizer["Download"]</button> | <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">@localizer["delete"]</a>
        </form>
        @*<p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">@localizer["delete"]</a>
        </p>*@
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
