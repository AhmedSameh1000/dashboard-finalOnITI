@using System.Globalization;
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer
@model WebApplication1.Models.Brand

@{
    ViewData["Title"] = "Details";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@localizer["details"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">@localizer["brands"]</a></li>
                    <li class="breadcrumb-item active">@localizer["details"]</li>
                </ol>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>


<div class="container m-3">
    <div class="m-4">
    
    <dl class="row">
        <dt class = "col-sm-2">
            @localizer["name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">@localizer["edit"]</a>
        <a asp-action="Index" class="btn btn-warning">@localizer["Back to List"]</a>
</div>
</div>

