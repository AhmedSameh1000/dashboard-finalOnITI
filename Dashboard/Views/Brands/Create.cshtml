@using System.Globalization;
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer
@model WebApplication1.Models.Brand

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@localizer["create"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">@localizer["brands"]</a></li>
                    <li class="breadcrumb-item active">@localizer["create"]</li>
                </ol>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>










<form method="post" class="was-validated" asp-action="Create" enctype="multipart/form-data">
    <section class="content">
        <div class="container-fluid">
            <div class="row row-cols-1 row-cols-md-2 g-4">
                <div asp-validation-summary="ModelOnly" class=" invalid-feedback"></div>
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">@localizer["Name"]</label>
                                <input tabindex="0" required asp-for="Name" class="form-control" />
                                <span @*asp-validation-for="Name"*@ class="invalid-feedback">@localizer["Insert Brand Name"]</span>
                            </div>

                            <div class="form-group  ms-2">
                                <input type="submit" value="@localizer["create"]" class="btn btn-primary" />
                            </div>
                            <div class="form-group ">
                                <a class="btn btn-warning" asp-action="Index">@localizer["Back to List"]</a>
                            </div>
                            <div class="form-group">
                                <span class="invalid-feedback">@ViewData["message"]</span>

                            </div>
                  
                            
                        </div>
                    </div>
                </div>
                
                    
                </div>
            </div>
        
    </section>
</form>



