@model WebApplication1.Models.Category

@{
    ViewData["Title"] = "Delete";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@localizer["delete"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">@localizer["home"]</a></li>
                    <li class="breadcrumb-item active">@localizer["delete"]</li>
                </ol>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @localizer["name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @localizer["image"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class = "col-sm-2">
        @localizer["description"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@localizer["delete"] class="btn btn-danger" />
            <button class="btn btn-warning ">
        <a asp-action="Index"><strong class="text-dark">@localizer["back"]</strong></a>
            </button>
    </form>
</div>
</div>
