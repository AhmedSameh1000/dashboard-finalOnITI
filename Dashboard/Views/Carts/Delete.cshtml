@model WebApplication1.Models.Cart

@{
    ViewData["Title"] = "Delete";
}

<h1>@localizer["delete"]</h1>

<h3>@localizer["Are you sure you want to delete this?"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @localizer["CreationDate"]

        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @localizer["Discount"]

        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class = "col-sm-2">
            @localizer["PaymentDate"]

        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentDate)
        </dd>
        <dt class = "col-sm-2">
            @localizer["TotalCost"]

        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalCost)
        </dd>
        <dt class = "col-sm-2">
            @localizer["StatusId"]

        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusId)
        </dd>
        <dt class = "col-sm-2">
            @localizer["CardTypeId"]

        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CardTypeId)
        </dd>
        <dt class = "col-sm-2">
            @localizer["CartStatusId"]

        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CartStatusId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@localizer["delete"] class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-warning">@localizer["back"] </a>
    </form>
</div>
