    <a id="registerSubmit" style="width: 6rem !important;margin: 1rem;" asp-area="Identity" asp-page="/Account/Register" class="w-100  btn btn-lg btn-primary">@localizer["rig"]</a>

</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
