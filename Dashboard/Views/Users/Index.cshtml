                            </div>
                        </div>
                    </div>*@
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-striped dataTable dtr-inline">
                            <thead>
                                <tr>
                                    <th>
                                        @localizer["No."]
                                    </th>
                                    <th>
                                        @localizer["User Name"]
                                    </th>
                                    <th>
                                        @localizer["Full Name"]
                                    </th>
                                    <th>
                                        @localizer["Email"]
                                    </th>

                                    <th class="col-2">
                                        @localizer["Operation"]
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int rowNo = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @(rowNo += 1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>


                                        <td class="col-2">
                                            
                                                <div class="btn-group d-flex justify-content-center ">
                                                @*<a asp-action="Edit" asp-route-id="@item.Id" type="button" title="@localizer["edit"]" class="btn btn-info">
                                                    <i class="fa fa-eye"></i>
                                                </a>*@
                                                <a asp-action="Delete" asp-route-id="@item.Id" type="button" title="@localizer["delete"]" class="btn btn-danger">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" type="button" title="@localizer["details"]" class="btn btn-warning">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                </div>
                                          
                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr class="d-none">
                                    <th>Name</th>
                                    <th>Name</th>

                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>





