@model IEnumerable<UserDTO>;
@{
    ViewData["title"] = "users";
}
<div class="gap-5 justify-content-center ">
    @foreach (var item in Model)
    {
        <div style="background-color:#aaaa" class="  mb-3   card-body text-center d-flex justify-content-between">
            <div style="text-align:start">
                <h4 class="h4 fw-bold">User Name : @Html.DisplayFor(modelItem => item.UserName)</h4>
                <h4 class="h4 fw-bold  ">Full Name : @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName) </h4>
                <h4 class="h4">Email : @Html.DisplayFor(modelItem => item.Email)</h4>
            </div>
            <div class="d-flex m-auto flex-column flex-md-row " >
                <a class=" h-50 btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details <i class="ms-2 fa-solid fa-bars-staggered"></i></a>
                <a class=" h-50 btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete <i class="ms-2 fa-solid fa-trash-can"></i></a>
            </div>
        </div>
        <p>@ViewData["admin"]</p>
    }
</div>